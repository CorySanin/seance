{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "NodeNext",
    "target": "ESNext",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "outDir": "./distribution"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}